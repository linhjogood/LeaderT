<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listitem"
   >

    <TextView
        android:id="@+id/ItemSKU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="28dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:onClick="gotoSecondActivity"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@mipmap/ic_launcher"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/VendorCode"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/ItemSKU"
        android:layout_below="@+id/ItemSKU"
        android:layout_marginTop="9dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/ItemSKU"
        android:layout_alignBottom="@+id/ItemSKU"
        android:layout_toEndOf="@+id/ItemSKU"
        android:layout_marginStart="12dp" />


</RelativeLayout>